@using Juan_app.ViewModels.Account
@model LoginVM
<!-- breadcrumb area start -->
<div class="breadcrumb-area bg-img" data-bg="assets/img/banner/breadcrumb-banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap text-center">
                    <nav aria-label="breadcrumb">
                        <h1 class="breadcrumb-title">Login-Register</h1>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Login-Register</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area end -->
<!-- login register wrapper start -->
<div class="login-register-wrapper" style="padding-top: 30px; padding-bottom: 30px;">
    <div class="container">
        <div class="member-area-from-wrap" style="margin-top: 0;">
            <div class="row justify-content-center">
                <!-- Login Content Start -->
                <div class="col-lg-6 mx-auto">
                    <div class="login-reg-form-wrap">
                        <h2>Sign In</h2>
                        <form method="post">
                            <div class="single-input-item">
                                <label asp-for="UsernameOrEmail">Username or Email</label>
                                <input asp-for="UsernameOrEmail" placeholder="Username or Email" />
                                <span asp-validation-for="UsernameOrEmail" style="color:red"></span>
                            </div>
                            <div class="single-input-item">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" placeholder="Password" />
                                <span asp-validation-for="Password" style="color:red"></span>
                            </div>
                            <div class="single-input-item">
                                <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                    <div class="remember-meta">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="rememberMe" asp-for="RememberMe" />
                                            <label class="custom-control-label" for="rememberMe" asp-for="RememberMe">Remember Me</label>
                                        </div>
                                    </div>
                                    <a href="#" class="forget-pwd">Forget Password?</a>
                                </div>
                            </div>
                            <div class="single-input-item">
                                <button class="btn">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Login Content End -->
                </div>
                </div>
                </div>
                </div>
