@using Juan_app.ViewModels.Account
 @model RegisterVM
<!-- breadcrumb area start -->
<div class="breadcrumb-area bg-img" data-bg="assets/img/banner/breadcrumb-banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap text-center">
                    <nav aria-label="breadcrumb">
                        <h1 class="breadcrumb-title">Login-Register</h1>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Login-Register</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area end --> 
<div class="login-register-wrapper" style="padding-top: 30px; padding-bottom: 30px;">
<div class="container">
    <div class="member-area-from-wrap" style="margin-top: 0;">
        <div class="row justify-content-center">
<!-- Register Content Start -->

<div class="col-lg-6 mx-auto">
    <div class="login-reg-form-wrap signup-form">
        <h2>Signup Form</h2>
        <form method="post">
            <div class="single-input-item">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" placeholder="Name" />
                                <span asp-validation-for="Name" style="color:red"></span>
            </div>
            <div class="single-input-item">
                                <label asp-for="Surname">Surname</label>
                                <input asp-for="Surname" placeholder="Surname" />
                                <span asp-validation-for="Surname" style="color:red"></span>
            </div>
            <div class="single-input-item">
                                <label asp-for="Username">Username</label>
                                <input asp-for="Username" placeholder="Username" />
                                <span asp-validation-for="Username" style="color:red"></span>
            </div>
            <div class="single-input-item">
                                
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" placeholder="Email" />
                                    <span asp-validation-for="Email" style="color:red"></span>
                                
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="single-input-item">
                                        <label asp-for="Password">Password</label>
                                        <input asp-for="Password" placeholder="Password" />
                                        <span asp-validation-for="Password" style="color:red"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="single-input-item">
                                        <label asp-for="ConfirmPassword">Confirm Password</label>
                                        <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" />
                                        <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                    </div>
                </div>
                                <div asp-validation-summary=All></div>
            </div>
            <div class="single-input-item">
                <div class="login-reg-form-meta">
                    <div class="remember-meta">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="subnewsletter">
                            <label class="custom-control-label" for="subnewsletter">Subscribe Our Newsletter</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="single-input-item">
                <button type="submit" class="btn">Register</button>
            </div>
        </form>
    </div>
</div>
</div>
</div>
</div>
</div>
<!-- Register Content End -->
                    
